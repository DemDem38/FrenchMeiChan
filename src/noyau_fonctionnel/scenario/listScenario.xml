                <pre> 3 </pre>
                <cond>non</cond>
                <next>-1</next>
                <robot>0</robot> 
            </reply>

            <reply>
                <id> 9 </id>
                <texte>J'espere que vous pourrez avoir une bonne nuit de someil ce soir</texte>
                <pre> 2 </pre>
                <cond>fatigue</cond>
                <next>-1</next>
                <robot>0</robot> 
                <cond_heure>
                    <min>6</min>
                    <max>20</max>
